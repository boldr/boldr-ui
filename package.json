{
  "name": "boldr-ui",
  "version": "0.0.5",
  "description": "UI components for BoldrCMS",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boldr/boldr-ui.git"
  },
  "scripts": {
    "build": "npm run clean && npm run build:umd && npm run build:es && npm run build:sass",
    "build:umd": "webpack --config internal/webpack/webpack.prod.config.js --progress --colors",
    "build:es": "NODE_ENV=production babel --ignore=__tests__,__mocks__,src/**/*.test.js ./src -d ./lib",
    "build:sass": "npm run sass && cp -r src/styles lib && cp dist/boldrui.css lib",
    "changelog": "conventional-changelog -p atom -i CHANGELOG.md",
    "clean": "rimraf dist && rimraf lib",
    "sass": "node-sass --output-style compressed src/styles/boldrui.scss -o dist",
    "build:test": "echo \"nothing\" && exit 0",
    "format": "prettier-eslint --write \"src/**/*.js\"",
    "start": "cross-env NODE_ENV=development UV_THREADPOOL_SIZE=100 node ./server",
    "test": "NODE_ENV=test jest -w 4 -u --config=internal/jest/jest.json",
    "test:ci": "NODE_ENV=test jest -w 4 -u --config=internal/jest/jest.json --forceExit"
  },
  "files": [
    "dist/",
    "lib/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "boldr"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.2.5",
    "react-md": "^1.0.11",
    "styled-components": "^1.4.4"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "cz-conventional-kawaii": "^0.1.4",
    "draft-js": "^0.10.0",
    "draft-js-import-html": "^0.3.2",
    "draftjs-to-html": "^0.7.0",
    "enzyme": "^2.8.0",
    "enzyme-to-json": "^1.5.0",
    "eslint": "^3.19.0",
    "eslint-config-boldr": "^0.8.9",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^2.1.0",
    "flow-bin": "^0.42.0",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "immutable": "^3.8.1",
    "jest": "^19.0.2",
    "node-sass": "^4.5.2",
    "postcss-cssnext": "^2.10.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "postcss-reporter": "^3.0.0",
    "prettier-eslint-cli": "^3.2.0",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "redux": "^3.6.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "webpack": "^2.3.3",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.4.2",
    "webpack-hot-middleware": "^2.18.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-kawaii"
    }
  }
}
