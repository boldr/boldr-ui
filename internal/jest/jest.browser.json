{
  "timers": "fake",
  "moduleNameMapper": {
    "\\.(css|scss)$": "identity-obj-proxy"
  },
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage",
  "coveragePathIgnorePatterns": [
    "<rootDir>/(dist|lib|config|docs|boldrCMS|.happypack|bin|.idea|public|db)/",
    "/flow-typed/",
    "/__fixtures__/",
    "/node_modules/",
    "<rootDir>/shared/styles/",
    "<rootDir>/shared/types/"
  ],
  "transform": {
      "^.+\\.js$": "<rootDir>/internal/jest/transform.js"
  },
  "testRegex": ".*.test\\.js",
  "setupTestFrameworkScriptFile": "<rootDir>/internal/jest/setup.js",
  "snapshotSerializers": [
    "<rootDir>/node_modules/enzyme-to-json/serializer"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/(lib|internal|config|docs|dist|.happypack|bin|.idea|public|db)/",
    "__snapshots__",
    "/styles/"
  ],
  "transformIgnorePatterns": [
    "/node_modules/",
    "/.happypack/",
    "/boldrCMS/",
    "/db/",
    "/styles/"
  ],
  "coverageReporters": [
    "json"
  ]
}
